<p id="notice"><%= notice %></p>

<h1>School Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>School</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @school_reviews.each do |school_review| %>
      <tr>
        <td><%= school_review.user_id %></td>
        <td><%= school_review.school_id %></td>
        <td><%= school_review.review %></td>
        <td><%= link_to 'Show', school_review %></td>
        <td><%= link_to 'Edit', edit_school_review_path(school_review) %></td>
        <td><%= link_to 'Destroy', school_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School Review', new_school_review_path %>
