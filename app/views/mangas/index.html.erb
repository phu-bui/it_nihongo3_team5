<p id="notice"><%= notice %></p>

<h1>Mangas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Number of pages</th>
      <th>Price</th>
      <th>Author</th>
      <th>Pulisher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mangas.each do |manga| %>
      <tr>
        <td><%= manga.title %></td>
        <td><%= manga.number_of_pages %></td>
        <td><%= manga.price %></td>
        <td><%= manga.author %></td>
        <td><%= manga.pulisher %></td>
        <td><%= link_to 'Show', manga %></td>
        <td><%= link_to 'Edit', edit_manga_path(manga) %></td>
        <td><%= link_to 'Destroy', manga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

