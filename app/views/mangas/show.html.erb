<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @manga.title %>
</p>

<p>
  <strong>Number of pages:</strong>
  <%= @manga.number_of_pages %>
</p>

<p>
  <strong>Price:</strong>
  <%= @manga.price %>
</p>

<p>
  <strong>Author:</strong>
  <%= @manga.author %>
</p>

<p>
  <strong>Pulisher:</strong>
  <%= @manga.pulisher %>
</p>
<p>

  <% if @manga.image.attached? %>

    <%= image_tag @manga.image %>

  <% end %>

</p>
<h2>Review From</h2>
<%= form_with(model: @manga_review, local: true) do |form| %>
  <div class= "field">
    <%= form.text_area :review %>
    <%= form.hidden_field :manga_id, :value => @manga.id %>
    <%= form.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<h2>Review List</h2>
<ul>
  <% @manga.manga_review.each do |manga_review|%>
   <li><%= manga_review.review %>
     (<i><%= manga_review.user.name if manga_review.user %></i>)</li>
<% end %>
</ul>
<%= link_to 'Edit', edit_manga_path(@manga) %> |
<%= link_to 'Back', mangas_path %>
